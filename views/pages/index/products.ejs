<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ARNI - Dark Fashion</title>
    <link rel="stylesheet" href="/stylesheets/index/home.css">
</head>
<body>
    <canvas id="backgroundCanvas"></canvas>
    
    <div class="content">
        <nav class="navbar">
            <div class="nav-container">
                <a href="#" class="logo">ARNI</a>
                <div class="nav-links">
                    <a href="/" class="active">Home</a>
                    <a href="/shop">Shop</a>
                    <% categoriesWithSubs.forEach(function(category) { %>
                        <a href="/subcategories?main=<%= category._id %>" 
                           data-category="true"
                           data-categories="<%= JSON.stringify(categoriesWithSubs) %>">
                            <%= category.mainCategoryName.split(' ')
                                .map((word, index) => index === 0 ? 
                                    word.charAt(0).toUpperCase() + word.slice(1).toLowerCase() : 
                                    word.toLowerCase())
                                .join(' ') %>
                        </a>
                    <% }); %>
                </div>                
                <div class="nav-right">
                    <% if (authentication) { %>
                        <a href="/users/pI">
                          <i class="fas fa-user-circle"></i> Profile
                        </a>
                    <% } else { %>
                        <a href="/auth/login">Login</a>
                    <% } %>                      
                    <a href="#" class="search-icon">üîç</a>
                    <a href="/users/cart" class="cart-icon">üõí</a>
                </div>
            </div>
        </nav>



        <section class="featured-products hi">
            <div class="container">
                <div class="section-title">
                    <h2><%= title.toUpperCase() %></h2>
                    <p>Explore our latest men's fashion</p>
                </div>
                <div class="product-grid">
                    <% if (cards.length === 0) { %>
                        <div class="no-products-icon">üîç</div>
            <h2>No Products Found</h2>
            <p>Under Maintenance</p>
                    <% } %>
                    
                    <% cards.forEach(function(card) { %>
                        <a href="/overview/<%= card._id %>" class="product-card-link">
                            <div class="product-card">
                                <div class="product-image-container">
                                    <img src="<%= card.images %>" 
                                         alt="<%= card.productDetails.name %>" 
                                         class="product-image">
                                </div>
                                <div class="product-info">
                                    <h3 class="product-name"><%= card.productDetails.name %></h3>
                                    <div class="price-layout">
                                        <div class="price-row">
                                            <span class="discount-price">‚Çπ<%= card.productDetails.discountPrice.toFixed(2) %></span>
                                            <span class="original-price">‚Çπ<%= card.productDetails.price.toFixed(2) %></span>
                                        </div>
                                        <% if (card.productDetails.price > card.productDetails.discountPrice) { %>
                                            <span class="discount-percentage">
                                                <%= Math.round((1 - card.productDetails.discountPrice/card.productDetails.price) * 100) %>% off
                                            </span>
                                        <% } %>
                                    </div>
                                </div>
                            </div>
                        </a>
                    <% }); %>
                </div>
            </div>
        </section>

        <footer>
            <div class="container">
                <div class="footer-content">
                    <div class="footer-section">
                        <h3>About ARNI</h3>
                        <p>Fashion for everyone</p>
                    </div>
                    <div class="footer-section">
                        <h3>Quick Links</h3>
                        <a href="/">Home</a>
            <a href="/shop">Shop</a>
                    </div>
                    <div class="footer-section">
                        <h3>Contact Us</h3>
                        <p>Email: info@arni.com</p>
                    </div>
                    <div class="footer-section">
                        <h3>Follow Us</h3>
                        <div class="social-links">
                            <a href="#">Instagram</a>
                            <a href="#">Facebook</a>
                            <a href="#">Twitter</a>
                        </div>
                    </div>
                </div>
            </div>
        </footer>
    </div>

    <script src="/javascripts/index/products.js"></script>
</body>
</html>