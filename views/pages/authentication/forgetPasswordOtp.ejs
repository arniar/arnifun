<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Enter OTP</title>
  <link rel="stylesheet" href="/stylesheets/authentication/signinotp.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
</head>
<body>
  <canvas id="backgroundCanvas"></canvas>
  <div class="login-container">
    <div class="login-box">
      <!-- Logo Section -->
      <div class="logo-section">
        <img src="/images/common/logo.png" alt="Logo">
      </div>

      <!-- Left Image Section -->
      <div class="image-section">
        <img src="/images/authentication/signin image.jpg" alt="Login Image">
      </div>

      <!-- Form Section -->
      <div class="form-section">
        <h2>Enter OTP</h2>

        <!-- OTP Email Sent Message -->
        <div class="otp-sent-message">
          <p>We have sent an OTP to <%= value %></p>
        </div>

        <!-- Error Message -->
        <% if (error) { %>
            <div class="error-message">
                <%= error %>
            </div>
        <% } %>

        <!-- OTP Form -->
        <form action="/auth/forgetPasswordOtp/verify-otp" method="post">
          <div class="otp-inputs">
            <input type="number" id="otp1" maxlength="1" name="otp1" required>
            <input type="number" id="otp2" maxlength="1" name="otp2" required>
            <input type="number" id="otp3" maxlength="1" name="otp3" required>
            <input type="number" id="otp4" maxlength="1" name="otp4" required>
            <input type="number" id="otp5" maxlength="1" name="otp5" required>
            <input type="number" id="otp6" maxlength="1" name="otp6" required>
          </div>
          <button type="submit">Verify OTP</button>
        </form>

        <!-- OTP-related Links -->
        <div class="form-links">
          <span>Didn't receive the OTP? </span>
          <a onclick="resend()" id="resendBtn" class="resend-otp" disabled>Resend OTP</a>
          <span id="timer" class="timer"></span>
        </div>
      </div>
    </div>
  </div>
  <script src="/javascripts/authentication/forgetPasswordOtp.js"></script>
</body>
</html>