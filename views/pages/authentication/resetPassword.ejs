<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Reset Password</title>
  <link rel="stylesheet" href="/stylesheets/authentication/resetPassword.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
</head>
<body>
  <canvas id="backgroundCanvas"></canvas>
  <div class="login-container">
    <div class="login-box">
      <!-- Logo Section -->
      <div class="logo-section">
        <img src="/images/common/logo.png" alt="Logo">
      </div>

      <!-- Left Image Section -->
      <div class="image-section">
        <img src="/images/authentication/signin image.jpg" alt="Reset Password Image">
      </div>

      <!-- Form Section -->
      <div class="form-section">
        <h2>Reset Your Password</h2>
        <form id="form">
          <!-- Password Input -->
          <div class="password-wrapper">
            <input type="password" name="newPassword" placeholder="Password" id="password" required>
            <i class="fas fa-eye" id="togglePassword"></i>
          </div>
          <p class="validation iValid" id="passwordMessage"></p>

          <!-- Confirm Password Input -->
          <div class="password-wrapper">
            <input type="password" name="confirm-password" placeholder="Confirm Password" id="passwordConfirm" required>
            <i class="fas fa-eye" id="togglePasswordConfirm"></i>
          </div>
          <p class="validation iValid" id="passwordConfirmMessage"></p>
          <button type="submit">Reset Password</button>
        </form>

        <!-- Back to Login Link -->
        <div class="form-links">
          <a href="/auth/login" class="back-to-login">Back to Login</a>
        </div>
      </div>
    </div>
  </div>
  <script src="/javascripts/authentication/resetPassword.js"></script>
</body>
</html>